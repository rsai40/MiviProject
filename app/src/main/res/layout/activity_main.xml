<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/half_curve_sample_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="M I V I "
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="top"
        android:layout_marginBottom="300dp"/>

    <EditText
        android:id="@+id/edit_text_id"
        android:layout_width="@dimen/edit_text_login"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Enter ID!" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Login"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_id" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/down_curve_sample_background">

    </LinearLayout>
</LinearLayout>